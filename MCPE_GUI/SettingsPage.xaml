<Page x:Class="MCPE_GUI.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="系统设置"
      Background="White">

    
    <Grid>
        <TextBlock Text="系统设置页面" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="16,16,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock Text="游戏路径(必填！！)" FontSize="14" Margin="16,64,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="127" />
        <TextBox  Margin="16,88,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="488" Height="32" x:Name="x_GamePath" />
        <Button Content="浏览" Margin="520,88,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Browse_Gamepath_Click" />
        <TextBlock Text="皮肤路径(必填！！)" FontSize="14" Margin="16,136,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" />
        <TextBox Margin="16,168,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="488" Height="32" x:Name="x_SkinPath" />
        <Button Content="浏览" Margin="520,168,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Browse_Skinpath_Click"  />
        <CheckBox Content="我同意向开发者上传崩溃日志等非敏感信息" Margin="16,224,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="304" Height="32" />
        <Button Content="获取游戏URI" Margin="16,264,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Height="32" />
    </Grid>
</Page>
