<Window x:Class="MCPE_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCPE_GUI"
        mc:Ignorable="d"
        Title="我的世界Modpc" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" 
                Background="White"
                CornerRadius="0,10,10,0"
                Margin="10,10,0,10"
                BorderThickness="0,0,1,0"
                BorderBrush="#E0E0E0">
            <StackPanel Orientation="Vertical">
                <Label Content="导航菜单" 
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20"
                       Foreground="#333"/>

                <ListBox x:Name="NavMenu" 
                         BorderThickness="0"
                         Background="White"
                         SelectionChanged="NavMenu_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" 
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                Padding="10,15">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#F0F7FF"/>
                                                <Setter Property="Foreground" Value="#1890FF"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Tag="AccountView" 
                                 FontSize="14"
                                 FontWeight="Medium">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Icons/account.png" 
                                   Width="20" 
                                   Height="20" 
                                   Margin="0,0,10,0"/>
                            <TextBlock Text="账户管理"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="GameView" 
                                 FontSize="14"
                                 FontWeight="Medium">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Icons/game.png" 
                                   Width="20" 
                                   Height="20" 
                                   Margin="0,0,10,0"/>
                            <TextBlock Text="游戏中心"/>
                        </StackPanel>
                    </ListBoxItem>

                    
                    <ListBoxItem Tag="FriendsView" 
                        FontSize="14"
                        FontWeight="Medium">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Icons/friend.png" 
                                    Width="20" 
                                    Height="20" 
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="好友管理"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="SettingsView" 
                            FontSize="14"
                            FontWeight="Medium">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Icons/settings.png" 
                                Width="20" 
                             Height="20" 
                                Margin="0,0,10,0"/>
                            <TextBlock Text="系统设置"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="ChargeView" 
                        FontSize="14"
                        FontWeight="Medium">
                       
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Icons/charge.png" 
                                    Width="20" 
                                    Height="20" 
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="充值中心"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                <Button Content="退出系统" 
                        Margin="20,30,20,20"
                        Padding="10,5"
                        Background="#F0F2F5"
                        BorderThickness="0"
                        Click="Logout_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#FF4D4F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <Border Grid.Column="1" 
                Background="White"
                CornerRadius="10,0,0,10"
                Margin="0,10,10,10">
            <Frame x:Name="MainContentFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="White"/>
        </Border>

        <!-- 顶部状态栏 -->
    </Grid>
</Window>